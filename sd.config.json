{
    "source": ["transformed-tokens/**/*.json"],
    "platforms": {
        "scss": {
            "transformGroup": "scss",
            "prefix": "",
            "buildPath": "build/scss/",
            "transforms": ["attribute/cti", "name/cti/kebab", "size/px"],
            "files": [{
                "destination": "_variables.scss",
                "format": "scss/map-deep"
            }]
        },
        "js": {
            "transformGroup": "js",
            "prefix": "",
            "buildPath": "build/js/",
            "files": [{
                "destination": "variables.js",
                "format": "javascript/module-flat"
            }]
        }
    }
}